@page "/add-storage"

<h3>AddStorage</h3>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<p role="status">Current count: @currentCount</p>
<div>
    <button class="btn-dark shadow-sm h-5 text-body=ADD m-2 w-auto" @onclick="UpdateHeading">
        Добавить склад
    </button>

    <button class="btn-dark  shadow-sm h-5 text-body=ADD w-auto ">
        Добавить Площадку
    </button>
    <button class="btn-dark  shadow-sm h-5 text-body=ADD w-auto">
        Добавить Пикет
    </button>
    <button class="btn-dark  shadow-sm h-5  text-body=ADD w-auto">
        Объеденить пикеты
    </button>
    <label class="col-1 vstack">
        <input type="checkbox" @onchange="CheckChanged" />
        @checkedMessage
    </label>
    <h2>@headingValue</h2>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Console.WriteLine("Storages загружены успешно.");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading storages: {ex.Message}");
        }
    }
    private int currentCount = 0;

    private void IncrementCount() => currentCount++;

    private string headingValue = "Initial heading";

    private async Task UpdateHeading()
    {
        await Task.Delay(2000);

        headingValue = $"New heading ({DateTime.Now})";
    }

    private string checkedMessage = "Not changed yet";


    private void CheckChanged() => checkedMessage = $"Last change {DateTime.Now}";

    private void WriteToConsole()
    {
        Console.WriteLine("ALO");
    }

    protected override void OnAfterRender(bool firstRender) =>
        Console.WriteLine("XD", firstRender);

    private void HandleClick() => Console.WriteLine("XD");


}
